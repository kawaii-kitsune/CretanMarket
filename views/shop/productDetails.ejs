<%- include ('../partials/head.ejs') %>
<% if(!locals.user){ %>
<%- include ('../partials/navbar.ejs') %>
<% } %>
<% if(locals.user){ %>
<%- include ('../partials/usernav.ejs') %>
<% } %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">

    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <%if(locals.user){%>
                    <a href="/user/"><i class="fas fa-home"></i></a>
                    <%}%>
                        <%if(!locals.user){%>
                    <a href="/"><i class="fas fa-home"></i></a>
                    <%}%>
                   
                </li>
                <li class="breadcrumb-item">
                    <%if(locals.user){%>
                    <a href="/user/<%- category %>/1/5"><%- category %></a>
                    <%}%>
                    <%if(!locals.user){%>
                    <a href="/<%- category %>/1/5"><%- category %></a>
                    <%}%>
                    
                </li>
                <li class="breadcrumb-item">
                    <a href="#"><%- product.title %></a>
                </li>
            </ol>
        </nav>
    </div>
</nav>
<div class="container mb-5 mt-5">
    <div class="row">
        <div class="container col-4">
            <img class="col-12" src=" <%-product.image %>" alt="product">
        </div>
        <div class="container col-5">
            <span class="badge badge-pill badge-dark"><%- product.brand %></span>
            <h2><%- product.title %></h2>
            <hr>
            <h5 class=" text-muted"><%- product.allegations %></h5>
            <div class="card mt-2 mb-2">
                <div class="card-body">
                    <h2><b><%- product.price %></b> <i class="fas fa-euro-sign"></i></h2>
                    <a href="/add-to-cart/<%- product._id %>"><button type="button" class="btn btn-primary"><i
                                class="fas fa-shopping-cart"></i> Προσθήκη</button></a>
                </div>
            </div>
            <%- product.description%>
        </div>
    </div>

</div>

<%- include ('../partials/footer.ejs') %> <%- include ('../partials/rest-body.ejs') %>