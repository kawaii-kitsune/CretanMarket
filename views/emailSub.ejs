<%- include ('./partials/head.ejs') %>
<% if(!locals.user){ %>
<%- include ('./partials/navbar.ejs') %>
<% } %>
<% if(locals.user){ %>
<%- include ('./partials/usernav.ejs') %>
<% } %>

<div class="container mt-5 mb-5">
    <div class="row pt-5 pb-5">
        <div class="col-md-12 ">
            <% if(locals.errors){%>
            <div class="error-template">
                <h1>
                    Ουπς!</h1>
                <h2>
                    <%= errors.msg %></h2>
                <div class="error-details">
                    Συγγνώμη, κάποιο λάθος έγινε στην επικοινωνία!
                </div>
                <div class="error-actions">
                    <a href="/" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-home"></span>
                        πισω στην αρχικη </a><a href="/client-support" class="btn btn-default btn-lg"><span
                            class="glyphicon glyphicon-envelope"></span> εξυπηρετηση πελατων </a>
                </div>
            </div>
        </div>
    </div>
</div>
<% } %>
<% if(!locals.errors){%>
<div class="error-template">
    <h1>
        Το Email σας καταχωρύθηκε με επιτυχία!</h1>
    <div class="container-fluid m-3">
        <img src="/img/Mailbox.gif" alt="">
    </div>
    <a href="https://storyset.com/communication">Communication illustrations by Storyset</a>
    <div class="error-actions ">
        <a href="/" class="btn btn-primary btn-lg"><span class="glyphicon glyphicon-home"></span>
            πισω στην αρχικη </a>
    </div>
</div>
<% } %>

</div>
</div>
</div>
<%- include ('./partials/footer.ejs') %>
<%- include ('./partials/rest-body.ejs') %>