<%- include ('../partials/head.ejs') %>
<%- include ('../partials/navbar.ejs') %>

<nav class="navbar navbar-expand-lg navbar-light bg-light">

    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#"><i class="fas fa-home"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="#">Connect</a>
                </li>
            </ol>
        </nav>
    </div>
</nav>
<main class="row  w-100 mb-5 mt-2">
    <%- include ('../partials/navigation.ejs') %>
    <div class=" card container-fluid col-6">
        <!-- Pills navs -->
        <div class="card-body">
            <ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="tab-login" data-mdb-toggle="pill" href="#pills-login" role="tab"
                        aria-controls="pills-login" aria-selected="true">Σύνδεση</a>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="tab-register" data-mdb-toggle="pill" href="#pills-register" role="tab"
                        aria-controls="pills-register" aria-selected="false">Εγγραφή</a>
                </li>
            </ul>
            <!-- Pills navs -->

            <!-- Pills content -->
            <div class="tab-content">
                <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
                    <form action="/user/login" method="POST">
                        <div class="text-center mb-3">
                            <p>Συνδεθείτε μέσω:</p>
                            <button type="button" class="btn btn-primary btn-floating mx-1">
                                <i class="fab fa-facebook-f"></i>
                            </button>

                            <button type="button" class="btn btn-primary btn-floating mx-1">
                                <i class="fab fa-google"></i>
                            </button>

                            <button type="button" class="btn btn-primary btn-floating mx-1">
                                <i class="fab fa-twitter"></i>
                            </button>

                            <button type="button" class="btn btn-primary btn-floating mx-1">
                                <i class="fab fa-github"></i>
                            </button>
                        </div>

                        <p class="text-center">ή:</p>

                        <!-- Email input -->
                        <div class="form-group form-outline mb-4">
                            <input type="email" id="email" name="email" class="form-control" class="form-control" />
                            <label class="form-label" for="loginName">Email </label>
                        </div>

                        <!-- Password input -->
                        <div class="form-group  form-outline mb-4">
                            <input type="password" id="password" name="password" class="form-control" />
                            <label class="form-label" for="loginPassword">Κωδικός</label>
                        </div>

                        <!-- 2 column grid layout -->
                        <div class="row mb-4">
                            <div class="col-md-6 d-flex justify-content-center">
                                <!-- Checkbox -->
                                <div class="form-check mb-3 mb-md-0">
                                    <input class="form-check-input" type="checkbox" value="" id="loginCheck" checked />
                                    <label class="form-check-label" for="loginCheck"> Να με Θυμάσαι </label>
                                </div>
                            </div>

                            <div class="col-md-6 d-flex justify-content-center">
                                <!-- Simple link -->
                                <a href="#!">Ξεχάσατε τον Κωδικό σας?</a>
                            </div>
                        </div>

                        <!-- Submit button -->
                        <button type="submit" class="btn btn-primary btn-block mb-4">Σύνδεση</button>

                        <!-- Register buttons -->
                        <div class="text-center">
                            <p>Δεν είστε Χρήστης; <a href="#!" id="reg">Εγγραφή</a></p>
                        </div>
                    </form>
                </div>
                <div class="tab-pane fade" id="pills-register" role="tabpanel" aria-labelledby="tab-register">
                    <form action="/user/register" method="POST">
                        <div class="text-center mb-3">
                            <p>Εγγραφείτε μέσω:</p>
                            <button type="button" class="btn btn-primary btn-floating mx-1">
                                <i class="fab fa-facebook-f"></i>
                            </button>

                            <button type="button" class="btn btn-primary btn-floating mx-1">
                                <i class="fab fa-google"></i>
                            </button>

                            <button type="button" class="btn btn-primary btn-floating mx-1">
                                <i class="fab fa-twitter"></i>
                            </button>

                            <button type="button" class="btn btn-primary btn-floating mx-1">
                                <i class="fab fa-github"></i>
                            </button>
                        </div>

                        <p class="text-center">ή:</p>

                        <!-- Name input -->
                        <div class="form-group form-outline mb-4">
                            <input type="text" id="name" name="name" class="form-control"
                                value="<%= typeof name != 'undefined' ? name : '' %>" />
                            <label class="form-label" for="registerName">Όνομα</label>
                        </div>

                        <!-- Username input -->
                        <div class="form-group form-outline mb-4">
                            <input type="text" id="username" name="username" class="form-control"
                                value="<%= typeof username != 'undefined' ? username : '' %>" />
                            <label class="form-label" for="registerUsername">όνομα Χρήστη</label>
                        </div>

                        <!-- Email input -->
                        <div class="form-group form-outline mb-4">
                            <input type="email" id="email" name="email" class="form-control"
                                value="<%= typeof email != 'undefined' ? email : '' %>" />
                            <label class="form-label" for="registerEmail">Email</label>
                        </div>

                        <!-- Password input -->
                        <div class="form-group form-outline mb-4">
                            <input type="password" id="password" name="password" class="form-control"
                                value="<%= typeof password != 'undefined' ? password : '' %>" />
                            <label class="form-label" for="registerPassword">Κωδικός</label>
                        </div>

                        <!-- Repeat Password input -->
                        <div class="form-group form-outline mb-4">
                            <input type="password" id="password2" name="password2" class="form-control"
                                value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                            <label class="form-label" for="registerRepeatPassword">Επαλήθευση Κωδικού</label>
                        </div>

                        <!-- Checkbox -->
                        <div class="form-group form-check d-flex justify-content-center mb-4">
                            <input class="form-check-input me-2" type="checkbox" value="" id="registerCheck" checked
                                aria-describedby="registerCheckHelpText" />
                            <label class="form-check-label" for="registerCheck">
                                Συμφωνώ με τοτς <a href="/terms">Όρους</a>
                            </label>
                        </div>

                        <!-- Submit button -->

                        <button type="submit" class="btn btn-primary btn-block mb-3">Εγγραφή</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- Pills content -->
    </div>
</main>
<%- include ('../partials/footer.ejs') %>
